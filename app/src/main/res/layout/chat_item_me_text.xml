<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="10px">

        <RelativeLayout
            android:id="@+id/rl_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView

                android:id="@+id/ic_failure"

                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/ic_send_failure" />

            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyleInverse"
                android:layout_width="40px"
                android:layout_height="40px" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_status"
            android:layout_marginLeft="160px"
            android:layout_marginRight="8px"
            android:layout_toLeftOf="@+id/iv_header"
            android:background="@drawable/im_mine_message_bkgnd"
            android:lineSpacingExtra="2px"
            android:text="100000000000000000000000000000000000000000000011"
            android:textColor="@color/black"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignParentRight="true"
            android:src="@drawable/tuijian_touxiang6" />


    </RelativeLayout>
</RelativeLayout>